{% extends 'back/base_back.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block content %}
<main class="mb-4">
    <div class="container px-4 px-lg-6">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="my-5">
                    <h1 class="my-5">Recettes</h1>

                    {{ include('_flash_messages.html.twig') }}

    <a class="btn btn-success" href="{{ path('app_back_recipe_new') }}">Ajouter une recette</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Category</th>
               
                {# <th>actions</th> #}
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.categories }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('app_back_recipe_show', {'id': recipe.id}) }}">show</a>
                    <a class="btn btn-sm btn-success" href="{{ path('app_back_recipe_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucune recette trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                        </div>
                    </div>
				</div>
			</div>
		</main>
{% endblock %}
